<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="pts3.castgame.fragments.ResultatPapierFragment">

    <TextView
        style="@style/TitrePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/page_reponse" />

    <TextView
        android:id="@+id/templateReponseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/compilePasTextView"
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/rep_compile_pas"
            android:textSize="30dp"
            android:textColor="#FF0000"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/executePasTextView"
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/rep_execute_pas"
            android:textSize="30dp"
            android:textColor="#FF0000"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/afficheTextView"
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Affiche :\n'La carte'"
            android:textSize="30dp"
            android:textAlignment="center"/>
    </LinearLayout>


</LinearLayout>
