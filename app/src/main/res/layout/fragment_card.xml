<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context="pts3.castgame.fragments.CardFragment">

    <TextView
        style="@style/SimpleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/page_card" />

    <TextView
        android:id="@+id/slected_template"
        style="@style/ListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/actual_card"
        style="@style/SmallTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carte 1 :" />

    <ListView
        android:id="@+id/list_cards"
        style="@style/ListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
