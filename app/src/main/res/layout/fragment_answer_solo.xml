<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context="pts3.castgame.fragments.AnswerSoloFragment">

    <TextView
        style="@style/SimpleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/page_answer_solo" />

    <TextView
        android:id="@+id/template_selected"
        style="@style/TemplateContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" />

    <LinearLayout
        style="@style/SimpleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rep_compilation"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/buttonOkCompile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/case_vierge"
                android:contentDescription="@string/ic_desc"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <View
            android:id="@+id/line_compilation"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/executeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="invisible">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rep_execution"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/buttonOkExecute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/case_vierge"
                android:contentDescription="@string/ic_desc"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <View
            android:id="@+id/line_execution"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/display_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Affichage"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_solo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <!-- Prend la place inutile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <Button
        android:id="@+id/b_validate"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/view_answer" />

</LinearLayout>
